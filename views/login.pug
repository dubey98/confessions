extends layout

block content
    div.row.justify-content-center
        div.col-6.border-bottom.border-top.border-primary.pt-4.mt-2.mb-2.pb-4
            h2.text-center #{title}
            form(action="", method="post")
                div.form-group
                    label(for="username") Username : 
                    input#username.form-control(type="text", name="username" placehoder="Choose a username" required="true" value=(undefined===user ? "" : user.username))
                div.form-group
                    label(for="password") Password : 
                    input#password.form-control(type="password", name="username" placehoder="Choose a username" required="true" value="")
                button.btn.btn-primary(type="submit") Submit 